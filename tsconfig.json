{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@helpers": [
        "./src/helpers"
      ],
    }
  },
  "include": [
    "src"
  ]
}